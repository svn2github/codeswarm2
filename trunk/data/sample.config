# This is a sample configuration file for code_swarm

# Frame width
Width=640

# Frame height
Height=480

# Input file
InputFile=data/sample-repevents.xml

# Project time per frame
MillisecondsPerFrame=21600000

# Background in R,G,B
Background=0,0,0

# Color assignment rules
ColorAssign1=".*doc.*", 0,0,0, 10,10,255
ColorAssign2=".*src.*", 255,0,0, 255,10,10
# Maximum number of rules = 7

# Save each frame to an image?
TakeSnapshots=false

# Where to save each frame
SnapshotLocation=frames/code_swarm-#####.png

# Create a glow around names? (Runs slower)
NameHalos=false

# Natural distance of files to people
EdgeLength=40

debug=false

# OpenGL is experimental. Use at your own risk.
UseOpenGL=false
